@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExcelId)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Job)
            </th>
       
            <th>
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExcelId)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Job.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                <form method="post" asp-action="Delete" asp-route-id="@item.Id">
                    <button class="btn btn-danger" type="submit">Delete</button>
                    @Html.ActionLink("Edit", "Edit", "Employees", new { id = item.Id }, new { @class = "btn btn-success " })
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
